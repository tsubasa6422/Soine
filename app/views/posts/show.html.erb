<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">

      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h4 class="mb-2"><%= @post.title %></h4>

          <% if @post.images.attached? %>
            <div class="mb-3 d-flex flex-wrap gap-2">
              <% @post.images.each do |image| %>
                <%= image_tag image.variant(resize_to_limit: [600, 600]),
                              class: "rounded",
                              style: "max-width: 100%;" %>
              <% end %>
            </div>
          <% end %>

          <div class="text-muted small">
            <%= @post.created_at.strftime("%Y/%m/%d %H:%M") %>
          </div>
        </div>

        <% if @post.user == current_user %>
          <div class="d-flex gap-2">
            <%= link_to "編集", edit_post_path(@post), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "削除",
                        post_path(@post),
                        method: :delete,
                        data: { confirm: "この投稿を削除しますか？" },
                        class: "btn btn-outline-danger btn-sm" %>
          </div>
        <% end %>
      </div>

      <hr>

<p class="mb-0"><%= simple_format(@post.body) %></p>

        <!-- 投稿時点の子ども情報（スナップショット） -->
        <% if @post.child_posts.any? %>
          <div class="mt-3">
            <div class="small text-muted mb-1">この投稿の子ども</div>

            <div class="d-flex flex-wrap gap-2">
              <% @post.child_posts.each do |cp| %>
                <span class="badge bg-light text-dark border">
                  <%= cp.child_name.presence || "子ども" %>

                  <% if cp.child_gender.present? %>
                    ・<%= { 0 => "不明", 1 => "男の子", 2 => "女の子" }[cp.child_gender] || "不明" %>
                  <% end %>

                  <% if cp.child_age_months.present? %>
                    ・<%= cp.child_age_months %>ヶ月
                  <% end %>
                </span>

              <% end %>
            </div>
          </div>
        <% end %>


      <!-- いいね -->
      <div class="mt-3 d-flex align-items-center gap-2">
        <% if @post.liked_by?(current_user) %>
          <%= link_to post_like_path(@post),
                      method: :delete,
                      class: "text-warning fs-5",
                      title: "いいね解除" do %>
            <i class="fa-solid fa-star"></i>
          <% end %>
        <% else %>
          <%= link_to post_like_path(@post),
                      method: :post,
                      class: "text-muted fs-5",
                      title: "いいね" do %>
            <i class="fa-regular fa-star"></i>
          <% end %>
        <% end %>

        <span class="text-muted small">いいね <%= @post.likes.count %> 件</span>
      </div>


      <!-- コメントフォーム -->
      <hr class="my-4">
      <h5 class="mb-3">コメント</h5>

      <%= form_with model: [@post, @comment], local: true do |f| %>
        <% if @comment.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-2">
          <%= f.text_area :comment, rows: 3, class: "form-control", placeholder: "コメントを書く" %>
        </div>

          <%= f.hidden_field :parent_id, value: nil %>  <!-- 追加 -->

        <div class="d-flex justify-content-end">
          <%= f.submit "送信", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- コメント一覧 -->
      <div class="mt-4">
        <h6 class="text-muted mb-3">全 <%= @comments.size %> 件</h6>

        <% @comments.each do |comment| %>
          <div class="border rounded p-2 mb-2">

            <div class="d-flex justify-content-between align-items-start">
              <div>
                <strong><%= comment.user.name.presence || "ユーザー" %></strong>
                <div class="text-muted small"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></div>
              </div>

              <% if comment.user == current_user %>
                <%= link_to "削除",
                            post_comment_path(@post, comment),
                            method: :delete,
                            data: { confirm: "コメントを削除しますか？" },
                            class: "btn btn-outline-danger btn-sm" %>
              <% end %>
            </div>

            <div class="mt-2"><%= simple_format(h(comment.comment)) %></div>

            <!-- 返信する -->
            <div class="mt-2">
              <a href="#" class="reply-toggle small text-muted" data-comment-id="<%= comment.id %>">
                返信する
              </a>
            </div>

            <!-- 返信フォーム（最初は非表示） -->
            <div class="reply-form d-none mt-2" id="reply-form-<%= comment.id %>">
              <%= form_with model: [@post, Comment.new], local: true do |f| %>
                <%= f.hidden_field :parent_id, value: comment.id %>

                <div class="mb-2">
                  <%= f.text_area :comment, rows: 2, class: "form-control", placeholder: "返信を書く" %>
                </div>

                <div class="d-flex justify-content-end">
                  <%= f.submit "返信", class: "btn btn-outline-secondary btn-sm" %>
                </div>
              <% end %>
            </div>

            <!-- 返信一覧 -->
            <% if comment.replies.any? %>
              <div class="mt-3 ms-4">
                <% comment.replies.each do |reply| %>
                  <div class="border-start ps-3 mb-2">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <strong><%= reply.user.name.presence || "ユーザー" %></strong>
                        <div class="text-muted small"><%= reply.created_at.strftime("%Y/%m/%d %H:%M") %></div>
                      </div>

                      <% if reply.user == current_user %>
                        <%= link_to "削除",
                                    post_comment_path(@post, reply),
                                    method: :delete,
                                    data: { confirm: "コメントを削除しますか？" },
                                    class: "btn btn-outline-danger btn-sm" %>
                      <% end %>
                    </div>

                    <div class="mt-1"><%= simple_format(h(reply.comment)) %></div>
                  </div>
                <% end %>
              </div>
            <% end %>

          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>
